# Neon Database 连接字符串 (请替换为你的实际值)
# 获取方式: https://console.neon.tech -> 你的项目 -> Connection Details -> Connection string
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# NextAuth.js 密钥 (用于加密 session)
# 生成方式: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"

# GitHub OAuth (可选)
# 获取方式: https://github.com/settings/developers
AUTH_GITHUB_ID="your-github-client-id"
AUTH_GITHUB_SECRET="your-github-client-secret"

# Google OAuth (可选)
# 获取方式: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# 阿里通义万相 API Key
# 获取方式: https://dashscope.console.aliyun.com/apiKey
DASHSCOPE_API_KEY="sk-xxxxx"

# Resend (邮箱登录)
# 获取方式: https://resend.com/api-keys
AUTH_RESEND_KEY="re_xxxxx"
AUTH_EMAIL_FROM="AI画图工坊 <noreply@yourdomain.com>"
